<div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <%= render 'books/user_info', user: @user, book: @book %>
       </div>
       <div class= "col-md-8 offset-md-1">
         <h2>Book detail</h2>
       <table class="table">
        <thead>
         <tr>
          <th></th>
          <th>title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
         </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=link_to user_path(@book_show.user.id) do %>
              <%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" ,size: "40x40" %>
              <%= @user.name%>
              <% end %></td>
            <td><%= link_to  "#{@book_show.title }", book_path(@book_show.id) %></td>
            <td><%= @book_show.body %></td>
              <% if current_user.id == @user.id %>
            <td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger", data: { confirm: '削除しますか？' } %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
