<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited
  <%= @user.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>

<div class= "container">
  <div class= "row">
    <div class="px-3 mx-auto">
      <h2>User info</h2>
      <%=form_with model: @user, local:true do |f| %>
      <h4>Name</h4>
      <%= f.text_field :name, autofocus: true %>
      <h4>Image</h4>
      <%= f.attachment_field :profile_image %>
      <h4>Introduction</h4>
      <%= f.text_area :introduction %>
      <%= f.submit "Update User", class: "btn btn-secondary d-flex align-items-end" %>
      <% end %>
    </div>
  </div>
</div>